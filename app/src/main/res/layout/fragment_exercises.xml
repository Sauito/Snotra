<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exercises.FragmentExercises">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/wrath"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:onClick="wrath"
                android:text="@string/exercise_wrath"
                app:iconTintMode="add" />

            <Button
                android:id="@+id/fear"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:onClick="fear"
                android:text="@string/exercise_fear" />

            <Button
                android:id="@+id/kontrol"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:onClick="kontrol"
                android:text="@string/exercise_kontrol" />

            <Button
                android:id="@+id/lostness"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:onClick="lostness"
                android:text="@string/exercise_lostness" />

            <Button
                android:id="@+id/selfhatred"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:onClick="selfhatred"
                android:text="@string/exercise_selfhatred" />

            <Button
                android:id="@+id/selfharming"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:onClick="selfharming"
                android:text="@string/exercise_selfharming" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>