<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Snotra" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_1</item>
        <item name="colorPrimaryVariant">@color/blue_2</item>
        <item name="colorOnPrimary">@color/white_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_1</item>
        <item name="colorSecondaryVariant">@color/green_2</item>
        <item name="colorOnSecondary">@color/dark_3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">#D1D4F7</item>
        <!-- Customize your theme here. -->
        <item name="CogIcon">@drawable/cog</item>
        <item name="BackgroundImage">@drawable/image_day</item>
        <item name="BackgroundColor">@color/blue_2</item>
        <item name="TextTitleColor">@color/green_2</item>
    </style>

    <style name="Widget.Snotra.ListViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:background">@color/blue_2</item>
    </style>

    <style name="Widget.Snotra.TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/dark_3</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>
</resources>