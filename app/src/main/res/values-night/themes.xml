<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Snotra" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_1</item>
        <item name="colorPrimaryVariant">@color/purple_2</item>
        <item name="colorOnPrimary">@color/dark_2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_1</item>
        <item name="colorSecondaryVariant">@color/red_1</item>
        <item name="colorOnSecondary">@color/red_2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="CogIcon">@drawable/cog_outline</item>
        <item name="BackgroundImage">@drawable/image_night </item>
        <item name="BackgroundColor">@color/dark_1</item>
        <item name="colorSurface">@color/dark_3</item>
        <item name="colorOnSurface">@color/white_1</item>
        <item name="TextTitleColor">@color/yellow_1</item>
    </style>

    <style name="Widget.Snotra.ListViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:background">@color/dark_1</item>
    </style>

    <style name="Widget.Snotra.TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>
</resources>